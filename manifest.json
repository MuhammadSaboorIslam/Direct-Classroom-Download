{
  "manifest_version": 3,
  "name": "Easy Download for Google Classroom",
  "version": "1.0.0",
  "description": "Add download buttons to Google Classroom attachments for quick and easy file downloads",
  "permissions": [
    "downloads"
  ],
  "host_permissions": [
    "https://classroom.google.com/*",
    "https://drive.google.com/*",
    "https://drive.usercontent.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://classroom.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
